<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <fragment
        android:name="com.teamhud.wakemehud.Fragments.Heure"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/fragment_heure"
        android:layout_weight="25">
    </fragment>
    <fragment
        android:name="com.teamhud.wakemehud.Fragments.Meteo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/fragment_meteo"
        android:layout_weight="25">
    </fragment>
    <fragment
        android:name="com.teamhud.wakemehud.Fragments.Agenda"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/fragment_agenda"
        android:layout_weight="50">
    </fragment>
</FrameLayout>
